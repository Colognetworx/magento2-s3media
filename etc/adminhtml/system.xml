<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="system">
            <group id="cnxmagento2s3media" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Magento2 S3 Media</label>
                <field id="aws_access_key_id" translate="label" type="text" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>AWS Acces Key Id</label>
                    <comment>You're AWS Access Key to use.</comment>
                </field>
                <field id="aws_secret_key_id" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>AWS Secret Key Id</label>
                    <comment>Your AWS Secret Key to Use.</comment>
                </field>
                <field id="bucketname" translate="label" type="text" sortOrder="15" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Bucket Name</label>
                    <comment>The Bucket Name to save your media too.</comment>
                </field>
            </group>
        </section>
    </system>
</config>